<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MypageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/mypage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:text="MyPage"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/dovemayo_gothic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/mypage_card_view"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="75dp">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/basic_image" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mypage_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user님"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/dovemayo_gothic" />

                    <Button
                        android:id="@+id/btn_modify_mypage"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#00ff0000"
                        android:text="내 정보 수정하기"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_image_change"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="#00ff0000"
                        android:text="사진 변경하기"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mypage_advertise"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/comptoir_advertise" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_order_list"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/mypage_btn_top"
                    android:text="   참여 내역"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/btn_like_list"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/mypage_btn_top"
                    android:text="   찜한 상품"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/btn_writer_list"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/mypage_btn_top"
                    android:text="   내가 쓴 글"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/mypage_btn_top"
                    android:text="   로그아웃"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/btn_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/mypage_btn_top"
                    android:text="   회원 탈퇴"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>